<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/appLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|center_horizontal|center"
        android:textSize="24sp"
        tools:text="Tip Calculator" />

    <TextView
        android:id="@+id/billLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:gravity="right"
        android:textSize="18sp"
        tools:text="Enter Bill Amount: " />

    <EditText
        android:id="@+id/amountEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/billLabel"
        android:layout_toEndOf="@+id/billLabel"
        android:background="@android:color/holo_blue_light"
        android:ems="10"
        android:inputType="numberDecimal"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tenTipLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="133dp"
        android:textSize="18sp"
        tools:text="10%" />

    <TextView
        android:id="@+id/fifteenTipLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tenTipLabel"
        android:layout_marginEnd="163dp"
        android:textSize="18sp"
        tools:text="15%" />

    <TextView
        android:id="@+id/twentyTipLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tenTipLabel"
        android:layout_marginEnd="62dp"
        android:textSize="18sp"
        tools:text="20%" />

    <TextView
        android:id="@+id/tipLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="167dp"
        android:textSize="18sp"
        tools:text="Tip" />

    <TextView
        android:id="@+id/totalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tipLabel"
        android:layout_marginTop="204dp"
        android:textSize="18sp"
        tools:text="Total" />

    <TextView
        android:id="@+id/customTipTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textSize="30sp"
        tools:text="Custom Tip" />

    <SeekBar
        android:id="@+id/customTipSeekBar"
        android:layout_width="273dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="223dp"
        android:layout_toStartOf="@+id/twentyTipLabel"
        android:max="100"
        android:progress="18"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/customTipLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tipCustomTextView"
        android:layout_marginStart="23dp"
        android:textSize="18sp"
        tools:text="Tip" />

    <TextView
        android:id="@+id/percentCustomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/customTipSeekBar"
        android:layout_marginStart="-97dp"
        android:layout_toEndOf="@+id/twentyTipLabel"
        android:gravity="center_vertical|center_horizontal|center"
        android:textSize="24sp"
        tools:text="1%" />

    <TextView
        android:id="@+id/tip10TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tenTipLabel"
        android:layout_alignTop="@+id/tipLabel"
        android:gravity="center"
        android:textSize="18sp"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/total10TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tip10TextView"
        android:layout_alignTop="@+id/totalLabel"
        android:gravity="center"
        android:textSize="18sp"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tip15TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tipLabel"
        android:layout_marginEnd="179dp"
        android:gravity="right"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/total15TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tip15TextView"
        android:layout_alignTop="@+id/totalLabel"
        android:gravity="right|center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tip20TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/twentyTipLabel"
        android:layout_alignTop="@+id/tipLabel"
        android:gravity="left"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/total20TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tip20TextView"
        android:layout_alignTop="@+id/totalLabel"
        android:gravity="left|center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tipCustomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="173dp"
        android:layout_marginStart="86dp"
        android:gravity="right"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/customTipTotalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/customTipLabel"
        android:layout_marginBottom="112dp"
        android:textSize="18sp"
        tools:text="Total" />

    <TextView
        android:id="@+id/totalCustomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tipCustomTextView"
        android:layout_alignTop="@+id/customTipTotalLabel"
        android:gravity="right"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/amountDisplayTextView"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="101dp"
        android:layout_toEndOf="@+id/billLabel"
        android:visibility="invisible"
        tools:visibility="invisible" />

</RelativeLayout>